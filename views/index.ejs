<h1>Index for mongo_survey</h1>

<h1>Surveys</h1>
<ul>
<% surveys.forEach( function(survey) { %>
  <li><a href="/respond/<%=survey._id%>"><%= survey.name %></a></li>
<% }); %>
</ul>

<h2>Create a New Survey</h2>
<form action="/survey" method="post">
  <p><input type="text" placeholder="Name" name="name" id="name" size="80"></p>
  <p><input type="text" placeholder="Choices" name="choices" id="choices" size="80"></p>
  <p><input type="submit" value="Create Survey"></p>
</form>
